        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#ba993c"/>
                <Setter Property="BorderThickness" Value="3"/>
                <Setter Property="Cursor" Value="IBeam" />
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#ba993c"/>
                <Setter Property="BorderThickness" Value="3"/>
                <Setter Property="Cursor" Value="IBeam" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>