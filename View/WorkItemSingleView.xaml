<UserControl
    x:Class="Magnify.View.WorkItemSingleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Magnify.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#f7f6f4">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Grid.Row="0"
                Margin="30,30,0,20"
                VerticalAlignment="Center"
                FontSize="32"
                FontWeight="DemiBold">
                Work Item:
            </TextBlock>
            <TextBlock
                Grid.Row="0"
                Margin="5,30,20,20"
                VerticalAlignment="Center"
                FontSize="28"
                Text="{Binding Title}" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Margin="30,0,30,20"
            Background="white"
            CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Direction="320"
                    Opacity="0.5"
                    ShadowDepth="1"
                    Color="Black" />
            </Border.Effect>
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Vertical">
                    <Label
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="DemiBold">
                        Title
                    </Label>
                    <TextBox
                        Height="28"
                        Margin="0,0,0,15"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        MaxLength="30"
                        Style="{StaticResource TextBoxStyle}"
                        Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Vertical">
                    <Label
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="DemiBold">
                        Description
                    </Label>
                    <TextBox
                        Height="100"
                        Margin="0,0,0,15"
                        AcceptsReturn="True"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        MaxLength="500"
                        Style="{StaticResource TextBoxStyle}"
                        Text="{Binding Description}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Visible" />
                </StackPanel>
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    Orientation="Horizontal">
                    <Label
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="DemiBold">
                        Created At:
                    </Label>
                    <Label
                        Margin="0,0,0,15"
                        Content="{Binding CreatedAt}"
                        FontFamily="Segoe UI"
                        FontSize="16" />
                </StackPanel>
                <Grid Grid.Row="3" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,0,20,0"
                        Orientation="Vertical">
                        <Label
                            FontFamily="Segoe UI"
                            FontSize="16"
                            FontWeight="DemiBold">
                            Type
                        </Label>
                        <ComboBox
                            Margin="0,0,0,15"
                            FontFamily="Segoe UI"
                            FontSize="16"
                            Text="{Binding WorkItemType}">
                            <ComboBoxItem Content="Story" />
                            <ComboBoxItem Content="Bug" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Vertical">
                        <Label
                            FontFamily="Segoe UI"
                            FontSize="16"
                            FontWeight="DemiBold">
                            Story Points
                        </Label>
                        <ComboBox
                            Margin="0,0,0,15"
                            FontFamily="Segoe UI"
                            FontSize="16"
                            Text="{Binding StoryPoints}">
                            <ComboBoxItem Content="1" />
                            <ComboBoxItem Content="3" />
                            <ComboBoxItem Content="5" />
                            <ComboBoxItem Content="8" />
                        </ComboBox>
                    </StackPanel>
                </Grid>
                <Label
                    Grid.Row="4"
                    FontFamily="Segoe UI"
                    FontSize="16"
                    FontWeight="DemiBold">
                    Status
                </Label>
                <ComboBox
                    Grid.Row="5"
                    Margin="0,0,20,15"
                    FontFamily="Segoe UI"
                    FontSize="16"
                    Text="{Binding WorkItemStatus}">
                    <ComboBoxItem Content="New" />
                    <ComboBoxItem Content="Development" />
                    <ComboBoxItem Content="Review" />
                    <ComboBoxItem Content="Testing" />
                    <ComboBoxItem Content="Resolved" />
                </ComboBox>
                <Button
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="0,0,0,15"
                    Command="{Binding SaveCommand}"
                    FontSize="18">
                    Save
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
