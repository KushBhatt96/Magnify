<UserControl
    x:Class="Magnify.View.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Magnify.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0" Color="#15171a" />
                <GradientStop Offset="0.8" Color="#535963" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Right">
            <StackPanel Margin="20,20" Orientation="Horizontal">
                <Button
                    Margin="0,0,10,0"
                    Click="MinimizeButton_Click"
                    Style="{StaticResource ButtonStyle}">
                    <Image Source="/Resources/Images/minimize.png" />
                </Button>
                <Button
                    Margin="0,0,10,0"
                    Click="MaximizeButton_Click"
                    Style="{StaticResource ButtonStyle}">
                    <Image Source="/Resources/Images/maximize.png" />
                </Button>
                <Button
                    Margin="0,0,0,0"
                    Click="CloseButton_Click"
                    Style="{StaticResource ButtonStyle}">
                    <Image Source="/Resources/Images/close.png" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Image
                Width="100"
                Height="100"
                Margin="0,0,0,350"
                Source="/Resources/Images/butterfly_large.png" />
            <Label
                Margin="0,0,0,225"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="white">
                Welcome to Magnify
            </Label>
            <TextBox
                Width="250"
                Height="30"
                Margin="0,0,0,150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding Username, Mode=TwoWay}" />
            <PasswordBox
                Width="250"
                Height="30"
                Margin="0,0,0,50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Password=""
                Style="{StaticResource PasswordBoxStyle}" />
            <Button
                Width="75"
                Height="30"
                Margin="0,0,0,-50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding LoginCommand}"
                Cursor="Hand">
                Login
            </Button>
        </Grid>
    </Grid>
</UserControl>
